{
	"name": "@lesjoursfr/mastodon-share-button",
	"version": "2.0.9",
	"description": "Simple module to share content to Mastodon.",
	"license": "MIT",
	"repository": "lesjoursfr/mastodon-share-button",
	"homepage": "https://github.com/lesjoursfr/mastodon-share-button#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/mastodon-share-button/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x || 24.x"
	},
	"browserslist": [
		"Chrome >= 60",
		"Safari >= 12",
		"iOS >= 12",
		"Firefox >= 60",
		"Edge >= 79"
	],
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"eslint-check": "eslint-config-prettier src/index.js",
		"check-js": "eslint",
		"check-sass": "stylelint **/*.scss",
		"check-style": "prettier --check .",
		"lint-js": "eslint --fix",
		"lint-sass": "stylelint **/*.scss --fix",
		"format": "prettier --write .",
		"test": "npx ava",
		"server": "webpack serve --mode development --config server/button.webpack.js --hot --open"
	},
	"files": [
		"src/**/*"
	],
	"keywords": [
		"mastodon",
		"share",
		"button"
	],
	"devDependencies": {
		"@babel/core": "^7.28.3",
		"@babel/preset-env": "^7.28.3",
		"@eslint/js": "^9.34.0",
		"ava": "^6.4.1",
		"babel-loader": "^10.0.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.3.0",
		"js-cookie": "^3.0.5",
		"jsdom": "^26.1.0",
		"mini-css-extract-plugin": "^2.9.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"sass": "^1.91.0",
		"sass-loader": "^16.0.5",
		"style-loader": "^4.0.0",
		"stylelint": "^16.23.1",
		"stylelint-config-sass-guidelines": "^12.1.0",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.2"
	},
	"peerDependencies": {
		"js-cookie": "^3.0.5"
	},
	"packageManager": "yarn@4.9.4"
}
